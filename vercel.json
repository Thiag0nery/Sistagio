{
  "version": 2,
  "builds": [
    {
      "src": "Sistagio/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.10.11" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/templates/static/(.*)",
      "dest": "/templates/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "Sistagio/wsgi.py"
    }
  ]
}